<div class="tab strain" data-group="primary" data-tab="strain">
{{!-- <div style="border-top: 2px groove #eeede0; overflow-y: scroll; height: 50%"> --}}
    <section class="center-pane">
        <div>
            <ul class="attributes">
                <ul class="resources" style="flex-wrap:wrap-reverse">
                    {{#each resources as |resource|}}
                    <li class="resource">
                        <h4 class="resource-name">
                            <input type="text" value="{{resource.label}}" disabled />
                        </h4>
                        <div class="resource-value multiple">
                            <input type="number"
                                style="text-align:center"
                                name="flags.ceane-talent.strain.{{resource.type}}"
                                value="{{resource.value}}"
                                min="0"
                                max="{{plus resource.value ../remaining_strain}}"
                                data-dtype="Number"
                                maxlength="2" />
                        </div>
                    </li>
                    {{/each}}
                    <li class="resource" style="flex:1 0 100%; border-top:none; border-bottom:1px solid var(--t5e-faint-color)">
                        <h4 class="resource-name">
                            <input type="text" value="{{localize "ceane-talent.StrainLabels.total"}}" disabled/>
                        </h4>
                        <div class="resource-value multiple">
                            <input class="res-value" type="number" min="0" value="{{total_strain}}" data-dtype="Number" maxlength="2" disabled />
                            <span class="sep"> / </span>
                            <input class="res-max" type="number" value="{{max_strain}}" data-dtype="Number" maxlength="2" disabled>
                        </div>
                    </li>
                </ul>
            </ul>
        </div>
        <table>
            <tbody>
                {{#each rows as |row|}}
                    <tr>
                        {{#each row.cells as |cell|}}
                            {{#if (eq row.i 0)}}
                                <th>{{cell.header}}</th>
                            {{else}}
                                <td>
                                    {{#if (eq cell.type "strain")}}
                                        {{row.i}}
                                    {{else}}
                                        <label>
                                            <input type="hidden" name="{{cell.type}}" value={{row.i}} />
                                            <a class="strain-toggle {{#if cell.disabled}}disabled{{/if}}">
                                                <i class="{{#if cell.enabled}}fas fa-check{{else}}far fa-circle{{/if}}"></i>
                                                {{cell.label}}
                                            </a>
                                        </label>
                                    {{/if}}
                                </td>
                            {{/if}}
                        {{/each}}
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </section>
</div>